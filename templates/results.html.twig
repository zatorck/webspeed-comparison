{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col">
            <h1>Comparsion Results</h1>
        </div>
        <div class="col pt-2 text-right">
            <a href="{{ path('home') }}" class="btn btn-secondary">Go Back </a>
        </div>
    </div>
    <h5>Date: {{ 'now'|date('Y.m.d H:i:s') }}</h5>
    <h4 class="mt-3">{{ mainUrl }}</h4>
    <p>HTML load time: {{ serverResposneTime }}s</p>
    <h3 class="mt-5">Additional results</h3>
    {% for additionalUrlsServerResponseTime in additionalUrlsServerResponseTimes %}
        <h4 class="mt-3">{{ additionalUrlsServerResponseTime.url }}</h4>
        <p>HTML load time: {{ additionalUrlsServerResponseTime.serverResposneTime }}s</p>
    {% endfor %}
{% endblock %}
